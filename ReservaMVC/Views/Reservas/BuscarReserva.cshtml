@model Reserva
@{
    ViewData["Title"] = "Buscar Reserva";
}

<h2>Obter reserva pelo Id <a asp-action="Index" class="btn btn-sm btn-outline-success">Retornar</a></h2>
<form method="post">
    <div class="form-group">
        <label for="id">Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Obter Reserva</button>
    </div>
</form>
@if (Model != null)
{
<h2>Reserva</h2>
<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Início</th>
            <th>Fim</th>
            <th>Veículo</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.ReservaID</td>
            <td>@Model.Nome</td>
            <td>@Model.LocalInicioLocacao</td>
            <td>@Model.LocalFimLocacao</td>
            <td>@Model.Veiculo</td>
        </tr>
    </tbody>
</table>
}