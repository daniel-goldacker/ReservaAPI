@model Reserva
@{
    ViewData["Title"] = "Alterar Reserva";
}

<h2>Atualiza uma Reserva <a asp-action="Index" class="btn btn-sm btn-outline-success">Retornar</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="ReservaID"></label>
        <input class="form-control" asp-for="ReservaID" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input class="form-control" asp-for="Nome" />
    </div>
    <div class="form-group">
        <label asp-for="LocalInicioLocacao">Início da Locação:</label>
        <input class="form-control" asp-for="LocalInicioLocacao" />
    </div>
    <div class="form-group">
        <label asp-for="LocalFimLocacao">Fim da Locação:</label>
        <input class="form-control" asp-for="LocalFimLocacao" />
    </div>
    <div class="form-group">
        <label asp-for="Veiculo">Veículo:</label>
        <input class="form-control" asp-for="Veiculo" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Atualizar</button>
    </div>
</form>
@if (ViewBag.Result == "Sucesso")
{
    <h2>Reservas</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Início</th>
                <th>Fim</th>
                <th>Veículo</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ReservaID</td>
                <td>@Model.Nome</td>
                <td>@Model.LocalInicioLocacao</td>
                <td>@Model.LocalFimLocacao</td>
                <td>@Model.Veiculo</td>
            </tr>
        </tbody>
    </table>
}
